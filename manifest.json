{
  "name": "Simple Lorem Ipsum",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://simple-lorem-ipsum.github.io/",
  "manifest_version": 2,
  "version": "0.2.1",
  "default_locale": "en",
  "icons": {
    "16": "icons/loremipsum_16.png",
    "48": "icons/loremipsum_48.png",
    "64": "icons/loremipsum.svg",
    "128": "icons/loremipsum.svg"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "commands": {
    "insert-lorem-ipsum": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "__MSG_extensionHotkey__"
    }
  },
  "permissions": [
    "contextMenus"
  ]
}
